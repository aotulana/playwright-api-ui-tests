{
  "name": "playwright-playground",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test:api": "playwright test --project=api",
    "test:e2e": "playwright test --project=e2e",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "format": "prettier --write .",
    "lint": "eslint --ext .ts --fix --max-warnings 0 ."
